# NNIT AI Freelancer Backend — Environment Variables

# Railway will auto-assign PORT. Do NOT set manually in production.
PORT=5000

# Auto operations
SCRAPE_INTERVAL=30
AUTO_APPLY=false
DEFAULT_MIN_BUDGET=100
DEFAULT_MAX_BUDGET=5000
DEFAULT_MIN_CONFIDENCE=85
DEFAULT_KEYWORDS=web development,python script,react,nodejs,data entry,automation

# Stripe Configuration
# Use your real Stripe keys in Railway Variables (do NOT commit secrets)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# OpenAI Configuration
# Use your OpenAI API key in Railway Variables (do NOT commit secrets)
OPENAI_API_KEY=sk-your_openai_key_here

# Database (SQLite path — will be created automatically)
# DATABASE_PATH=./freelance.db

# Optional: API Settings
API_TIMEOUT=30000
LOG_LEVEL=info
